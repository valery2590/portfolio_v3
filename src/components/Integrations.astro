---
import { getTranslations, getDefaultLanguage } from "../i18n/utils";

const currentLang = getDefaultLanguage();
const t = getTranslations(currentLang);
const integrations = [
  "Active Campaign",
  "Casafari",
  "Easoft",
  "Educa Edtech",
  "EGO",
  "Freshdesk",
  "Google Chat",
  "Grupo Planeta",
  "HubSpot",
  "Hyundai",
  "Inmobalia",
  "JSONLead",
  "LeadCars",
  "Linear",
  "Mailchimp",
  "Salesforce",
  "Tecnocasa",
  "Vitec",
  "Zendesk",
  "Zoho",
];
---

<section id="integrations" class="integrations">
  <div class="container">
    <h2 class="section-title" data-i18n="integrations.title">Integraciones</h2>
    <p class="section-subtitle" data-i18n="integrations.subtitle">
      Conectando plataformas para crear ecosistemas digitales unificados
    </p>

    <div class="integrations-visual">
      <div class="platform-node node-center">
        <div class="platform-icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <circle cx="8.5" cy="8.5" r="1.5"></circle>
            <path d="M21 15l-5-5L5 21"></path>
          </svg>
        </div>
        <span class="platform-name">API Hub</span>
      </div>

      <div class="platform-node node-top-left">
        <div class="platform-icon whatsapp">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path
